<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />

            <gradient
                android:centerColor="#007722"
                android:endColor="#007722"
                android:startColor="#007722" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />
                
                <gradient
                    android:centerColor="#00FF22"
                    android:endColor="#00FF22"
                    android:startColor="#00FF22" />
            </shape>
        </clip>
    </item>
</layer-list>