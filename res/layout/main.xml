<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:keepScreenOn="true"
    android:orientation="vertical" >

    <Button
        android:id="@+id/VideoIntent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/videoIntent" />

    <Button
        android:id="@+id/VideoProcess"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/VideoIntent"
        android:text="@string/videoProcess"
    />

    <ImageView
        android:id="@+id/KeyView"
        android:layout_width="wrap_content"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TitleView"
        android:contentDescription="@string/imageDesc" />

    <TextView
        android:id="@+id/CounterView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/KeyView"
        android:textSize="17sp" />

    <ProgressBar
        android:id="@+id/ProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/VideoProcess" />

     <View android:id="@+id/FakeView"
       android:layout_width="0dp"
       android:layout_height="0dp" 
       android:layout_centerInParent="true"/>
    
    <TextView
        android:id="@+id/TitleView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/FakeView"
        android:layout_below="@+id/ProgressBar"
        android:textIsSelectable="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/ValueView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/TitleView"
        android:layout_alignLeft="@+id/FakeView"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/TitleView"
        android:textIsSelectable="true"
        android:textSize="15sp" />

</RelativeLayout>
